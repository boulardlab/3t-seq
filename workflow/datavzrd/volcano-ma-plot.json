{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.16.1.json",
    "autosize": {
        "type": "fit",
        "contains": "padding",
        "resize": true
    },
    "transform": [
        {
            "calculate": "log(datum.baseMean + 1) / log(10)",
            "as": "log10_baseMean"
        },
        {
            "calculate": "-log(datum.padj) / log(10)",
            "as": "enrichment"
        }
    ],
    "params": [
        {
            "name": "opacity",
            "value": 75,
            "bind": {
                "input": "range",
                "name": "Set data points opacity ",
                "min": 1,
                "max": 100,
                "step": 1
            }
        },
        {
            "name": "pts",
            "select": "point"
        },
        {
            "name": "min_lfc",
            "value": -5,
            "bind": {
                "input": "range",
                "name": "Set log2 fold change minimum value ",
                "min": -20,
                "max": 10,
                "step": 1
            }
        },
        {
            "name": "max_lfc",
            "value": 5,
            "bind": {
                "input": "range",
                "name": "Set log2 fold change maximum value ",
                "min": -10,
                "max": 20,
                "step": 1
            }
        },
        {
            "name": "max_enrichment",
            "value": 10,
            "bind": {
                "input": "range",
                "name": "Set maximum enrichment value ",
                "min": 1,
                "max": 100,
                "step": 1
            }
        },
        {
            "name": "lfc_thr",
            "value": 0.5,
            "bind": {
                "input": "number",
                "name": "Differentially expressed genes log2 fold change threshold ",
                "min": 0,
                "max": 5,
                "step": 0.5
            }
        },
        {
            "name": "padj_thr",
            "value": 0.05,
            "bind": {
                "input": "number",
                "name": "Differentially expressed genes p-value threshold ",
                "min": 0,
                "max": 1,
                "step": 0.01
            }
        },
        {
            "name": "use_custom_axis",
            "value": true,
            "bind": {
                "input": "checkbox",
                "name": "Use custom axis? "
            }
        }
    ],
    "config": {
        "legend": {
            "disable": true
        }
    },
    "hconcat": [
        {
            "width": 500,
            "height": 500,
            "layer": [
                {
                    "mark": {
                        "type": "circle",
                        "clip": true,
                        "opacity": {
                            "expr": "opacity / 100"
                        }
                    },
                    "encoding": {
                        "x": {
                            "field": "log2FoldChange",
                            "type": "quantitative",
                            "title": "log2 fold change",
                            "scale": {
                                "domainRaw": {
                                    "expr": "use_custom_axis ? [min_lfc, max_lfc] : null"
                                }
                            }
                        },
                        "y": {
                            "field": "enrichment",
                            "type": "quantitative",
                            "title": "Enrichment (-log10 p-value)",
                            "scale": {
                                "domainRaw": {
                                    "expr": "use_custom_axis ? [0, max_enrichment] : null"
                                }
                            }
                        },
                        "tooltip": [
                            {
                                "field": "gene_name",
                                "type": "nominal"
                            },
                            {
                                "field": "padj",
                                "type": "quantitative"
                            },
                            {
                                "field": "log2FoldChange",
                                "type": "quantitative"
                            },
                            {
                                "field": "baseMean",
                                "type": "quantitative"
                            }
                        ],
                        "color": {
                            "condition": [
                                {
                                    "test": "datum.log2FoldChange > lfc_thr & datum.enrichment > -(log(padj_thr) / log(10))",
                                    "value": "blue"
                                },
                                {
                                    "test": "datum.log2FoldChange < -lfc_thr & datum.enrichment > -(log(padj_thr) / log(10))",
                                    "value": "red"
                                }
                            ]
                        },
                        "size": {
                            "condition": {
                                "param": "pts",
                                "value": 500,
                                "empty": false
                            },
                            "value": 50
                        }
                    }
                }
            ]
        },
        {
            "width": 500,
            "height": 500,
            "mark": {
                "type": "circle",
                "clip": true,
                "tooltip": {
                    "content": "data"
                },
                "opacity": {
                    "expr": "opacity / 100"
                }
            },
            "encoding": {
                "x": {
                    "field": "log10_baseMean",
                    "type": "quantitative",
                    "title": "Mean Expression (log10)"
                },
                "y": {
                    "field": "log2FoldChange",
                    "type": "quantitative",
                    "title": "Log2 Fold Change",
                    "scale": {
                        "domainRaw": {
                            "expr": "use_custom_axis ? max_lfc > min_lfc ? [min_lfc, max_lfc] : [max_lfc, min_lfc] : null"
                        }
                    }
                },
                "tooltip": [
                    {
                        "field": "gene_name",
                        "type": "nominal"
                    },
                    {
                        "field": "padj",
                        "type": "quantitative"
                    },
                    {
                        "field": "log2FoldChange",
                        "type": "quantitative"
                    },
                    {
                        "field": "baseMean",
                        "type": "quantitative"
                    }
                ],
                "color": {
                    "condition": [
                        {
                            "test": "datum.log2FoldChange > lfc_thr & datum.padj < padj_thr",
                            "value": "blue"
                        },
                        {
                            "test": "datum.log2FoldChange < -lfc_thr & datum.padj < padj_thr",
                            "value": "red"
                        }
                    ]
                },
                "size": {
                    "condition": {
                        "param": "pts",
                        "value": 500,
                        "empty": false
                    },
                    "value": 50
                }
            }
        }
    ]
}